{ "name": "Refreshing"
, "version": "0.1"
, "manifest_version": 2
, "description": "Automatically reload local pages when their content changes. Uses a node.js server for change detection."
, "icons": 
  { "128": "icon-128.png" 
  }
, "permissions":
  [ "tabs"
  , "http://127.0.0.1:7052/*"
  ]
, "background":
  { "scripts": [ "background.js" ]
  }
, "page_action":
  { "default_title": "Configure Refreshing"
  , "default_icon": "icon-grey-128.png"
  , "default_popup": "popup.html"
  }
, "offline_enabled": true
}
